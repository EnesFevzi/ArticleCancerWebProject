@model List<AnnouncementDto>

<div class="main-banner header-text">
    <div class="container-fluid p-0">
        <div class="owl-banner owl-carousel">
            <h1>Başlıca Duyurular</h1>
            @foreach (var item in Model)
            {
                <div class="item">
                    <img src="~/images/@item.Image.FileName" alt="" class="w-100">
                    <div class="item-content">
                        <div class="main-content">
                            <a>
                                <h4>@item.Title</h4>
                            </a>
                            <ul class="post-info">
                                <li><a href="#">@item.User.FirstName @item.User.LastName</a></li>
                                <li style="color: white; font-weight: bold; ">@item.CreatedDate.ToString("dd/MM/yyyy")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
