@model List<VideoBlogDto>

<div class="col-lg-12">
    <div class="sidebar-item recent-posts">
        <div class="sidebar-heading">
            <h2>DİĞER GÖNDERİLER</h2>
        </div>
        <div class="content">
            <ul class="list-group">
                @foreach (var article in Model)
                {
                    <li class="list-group-item">
                        <a asp-area=" " asp-controller="VideoBlog" asp-action="Detail" asp-route-id="@article.VideoBlogID">
                            <div class="d-flex">
                                <video width="30%" height="auto" >
                                    <source src="~/videos/@article.Video.FileName" type="video/mp4">
                                    Tarayıcınız video etiketini desteklemiyor.
                                </video>
                                <div class="ms-3">

                                    <h5>@article.Title</h5>
                                    <span>@article.CreatedDate.ToString("MMMM dd, yyyy")</span>
                                </div>
                            </div>
                        </a>
                    </li>
                }

            </ul>
        </div>
    </div>
</div>