
<section class="contact-us">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <div class="down-contact">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="sidebar-item contact-form">
                                <div class="sidebar-heading">
                                    <h2>Bizimle İletişime Geçin</h2>
                                </div>
                                <div class="content">
                                    <form method="post">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <input name="name" type="text" id="name" placeholder="Adınız Soyadınız" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <input name="email" type="text" id="email" placeholder="Mail Adresiniz" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-md-12 col-sm-12">
                                                <fieldset>
                                                    <input name="subject" type="text" id="subject" placeholder="Konu">
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <textarea name="message" rows="6" id="message" placeholder="Mesajınız" required=""></textarea>
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <button type="submit" id="form-submit" class="main-button">Mesaj Gönder</button>
                                                </fieldset>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="sidebar-item contact-information">
                                <div class="sidebar-heading">
                                    <h2>İletişim Bilgileri</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        <li>
                                            <h5>090-484-8080</h5>
                                            <span>PHONE NUMBER</span>
                                        </li>
                                        <li>
                                            <h5>info@company.com</h5>
                                            <span>EMAIL ADDRESS</span>
                                        </li>
                                        <li>
                                            <h5>
                                                123 Aenean id posuere dui,
                                                <br>Praesent laoreet 10660
                                            </h5>
                                            <span></span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <div id="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d385061.9676420195!2d28.494754912782636!3d41.06250842869007!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab5b58ba7eeff%3A0x31560b35ad4848d0!2s%C4%B0stanbul%20Beykent%20%C3%9Cniversitesi!5e0!3m2!1str!2str!4v1702149252924!5m2!1str!2str" width="100%" height="450px" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>

        </div>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        $("#form-submit").click(function (e) {
            e.preventDefault();

            var formData = {
                Name: $("#name").val(),
                SenderMail: $("#email").val(),
                Subject: $("#subject").val(),
                Body: $("#message").val()
            };
            $.ajax({
                url: "/Contact/SendMessage",
                type: "POST",
                data: formData,
                success: function (result) {
                    if (result.success) {
                        alert("E-posta başarıyla gönderildi!");
                        $("#name, #email, #subject, #message").val("");
                    } else {
                        alert("E-posta gönderme işlemi başarısız oldu: " + result.message);
                    }
                },
                error: function (error) {
                    alert("İşlem Başarısız Olmuştur");
                }
            });
        });
    });

</script>