
<div class="content-wrapper">

    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <div class="row">
            <div class="col-lg-8 mb-4 order-0">
                <div class="card">
                    <div class="d-flex align-items-end row">
                        <div class="col-sm-7">
                            <div class="card-body">
                                @await Component.InvokeAsync("DashboardBody")
                                @await Component.InvokeAsync("DashboardWeather")
                            </div>
                        </div>

                        <div class="col-sm-5 text-center text-sm-left">
                            <div class="card-body pb-0 px-0 px-md-4">
                                <img src="~/sneat/assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 order-1">
                <div class="row">
                    @{
                            @if (!User.IsInRole($"{RoleConsts.Admin}"))
                        {
                                <div class="col-lg-6 col-md-12 col-6 mb-4">

                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-title d-flex align-items-start justify-content-between">
                                                <i style="height:30px; font-size:2.25rem" class="menu-icon bx bx-message-rounded-dots"></i>
                                            </div>
                                            <span class="fw-semibold d-block mb-1">Gelen Mesajlar</span>
                                            <h3 class="card-title text-nowrap mb-1" id="receiverNotificationcount"></h3>
                                            <small class="text-success fw-semibold"></small>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-6 col-md-12 col-6 mb-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-title d-flex align-items-start justify-content-between">
                                                <i style="height:30px; font-size:2.25rem" class="menu-icon bx bx-message-rounded-dots"></i>
                                            </div>
                                            <span class="fw-semibold d-block mb-1">Gönderilen Mesajlar</span>
                                            <h3 class="card-title text-nowrap mb-1" id="senderNotificationcount"></h3>
                                            <small class="text-success fw-semibold"></small>
                                        </div>
                                    </div>

                                </div>
                        }
                    }
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        @{
                                @if (!User.IsInRole($"{RoleConsts.Member}"))
                            {
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-title d-flex align-items-start justify-content-between">

                                                <i style="height:30px; font-size:2.25rem" class="menu-icon bx bx-paper-plane"></i>
                                            </div>
                                            <span class="fw-semibold d-block mb-1">Toplam Yayınlanan <br /> Makale Sayısı</span>
                                            <h3 class="card-title mb-2" id="totalArticleCount"></h3>
                                            <small class="text-success fw-semibold"></small>
                                        </div>

                                    </div>
                            }
                        }
                    </div>
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        @{
                                @if (!User.IsInRole($"{RoleConsts.Member}"))
                            {
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-title d-flex align-items-start justify-content-between">
                                                <i style="height:30px; font-size:2.25rem" class="menu-icon bx bx-category"></i>
                                            </div>
                                            <span class="fw-semibold d-block mb-1">Toplam Yayınlanan <br /> Haber Sayısı</span>
                                            <h3 class="card-title text-nowrap mb-1" id="totalNewCount"></h3>
                                            <small class="text-success fw-semibold"></small>
                                        </div>
                                    </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <!-- Total Revenue -->
            <div class="col-12 col-lg-8 order-2 order-md-3 order-lg-2 mb-4">
                <div class="card">
                    <div class="row row-bordered g-0">
                        <div class="col-md-12">
                            <h5 class="card-header m-0 me-2 pb-3">@DateTime.Now.Year Yılının Portfolyo Yayınlama Analizi</h5>
                            <div id="customTotalRevenueChart" class="px-2"></div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/ Total Revenue -->
            <div class="col-24 col-md-8 col-lg-4 order-3 order-md-2">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        @{
                                @if (!User.IsInRole($"{RoleConsts.Member}"))
                            {
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-title d-flex align-items-start justify-content-between">
                                                <i style="height:30px; font-size:2.25rem" class="menu-icon bx bx-user-circle"></i>
                                            </div>
                                            <span class="fw-semibold d-block mb-1">Toplam <br /> Kullanıcı Sayısı</span>
                                            <h3 class="card-title text-nowrap mb-1" id="toplamKullaniciSayisi" data-url="@Url.Action("TotalUserCounts", "Dashboard")"></h3>
                                            <small class="text-success fw-semibold"></small>
                                        </div>
                                    </div>
                            }
                        }
                    </div>

                    <div class="col-lg-6 col-md-12 col-6 mb-4">
                        <div class="card">
                            @{
                                    @if (!User.IsInRole($"{RoleConsts.Member}"))
                                {
                                        <div class="card-body">
                                            <div class="card-title d-flex align-items-start justify-content-between">
                                                <i style="height:30px; font-size:2.25rem" class="menu-icon bx bx-captions"></i>
                                            </div>
                                            <span class="fw-semibold d-block mb-1">Toplam  <br /> Rol Sayısı</span>
                                            <h3 class="card-title text-nowrap mb-1" id="toplamRolSayisi" data-url="@Url.Action("TotalRoleCounts", "Dashboard")"></h3>
                                            <small class="text-success fw-semibold"></small>
                                        </div>
                                }
                            }
                        </div>
                    </div>
                    @{
                            @if (!User.IsInRole($"{RoleConsts.Member}"))
                        {
                                <div class="col-lg-6 col-md-12 col-6 mb-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="card-title d-flex align-items-start justify-content-between">
                                                <i style="height:30px; font-size:2.25rem" class="menu-icon bx bx-message-rounded-dots"></i>
                                            </div>
                                            <span class="fw-semibold d-block mb-1">Gelen Mesajlar</span>
                                        <h3 class="card-title text-nowrap mb-1" id="receiverNotificationcount"></h3>
                                            <small class="text-success fw-semibold"></small>
                                        </div>
                                    </div>
                                </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Order Statistics -->
        <div class="col-md-6 col-lg-4 col-xl-4 order-0 mb-4">
            <div class="card h-100">
                <div class="card-body">
                </div>
            </div>
        </div>
        <!--/ Order Statistics -->
        <!-- Expense Overview -->
        <div class="col-md-6 col-lg-4 order-1 mb-4">
            <div class="card h-100">
                <div class="card-body px-0">
                    <div class="tab-content p-0">
                    </div>
                </div>
            </div>
        </div>
        <!--/ Expense Overview -->
        <!-- Transactions -->
        <div class="col-md-6 col-lg-4 order-2 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <ul class="p-0 m-0">
                    </ul>
                </div>
            </div>
        </div>
        <!--/ Transactions -->
    </div>


</div>
<!-- / Content -->



<div class="content-backdrop fade"></div>
</div>



@section Scripts {
    <script src="~/js/dashboardIndex.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>

        var app = app || {}
        app.Urls = app.Urls || {}
        app.Urls.yearlyArticleUrl = "@(Url.Action("YearlyArticleCounts", "Dashboard"))";
        app.Urls.totalArticleCountUrl = "@(Url.Action("TotalArticleCount", "Dashboard"))";
        app.Urls.totalNewCountUrl = "@(Url.Action("TotalNewCount", "Dashboard"))";


        $(document).ready(function () {
            var toplam = $("#toplamKullaniciSayisi").data("url");
            $.ajax({
                type: "GET",
                url: toplam,
                dataType: "json",
                success: function (data) {
                    $("#toplamKullaniciSayisi").append(data);
                },

            });

            var toplam = $("#toplamRolSayisi").data("url");
            $.ajax({
                type: "GET",
                url: toplam,
                dataType: "json",
                success: function (data) {
                    $("#toplamRolSayisi").append(data);
                },

            });
            var connection = new signalR.HubConnectionBuilder()
                .withUrl("/signalrHub")
                .build();
            $("#connstatus").text(connection.state);
            connection.start().then(() => {
                $("#connstatus").text(connection.state);
                setInterval(() => {
                    connection.invoke("MessageCount");
                }, 1000);
            }).catch((err) => { console.log(err) });

            // connection.start().then(function () {
            //     console.log("SignalR bağlantısı başarıyla kuruldu.");
            // }).catch(function (err) {
            //     return console.error(err.toString());
            // });

            connection.on("ReceiveReceiverMessageCount", (receiverCount) => {
                console.log("Sender Mesaj sayısı alındı:", receiverCount);
                $("#receiverNotificationcount").text(receiverCount);
            });
            connection.on("ReceiveSenderMessageCount", (senderCount) => {
                console.log("Sender Mesaj sayısı alındı:", senderCount);
                $("#senderNotificationcount").text(senderCount);
            });

            

        
        });
                


    </script>


}



